.xrui-contextual-menu {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    background-color: rgb(255, 255, 255);
}

.xrui-contextual-menu__arrow {
    background-color: rgb(255, 255, 255);
    transform-origin: center;
    translate: -5px -33px;
    rotate: 45deg;
}

.xrui-contextual-menu__item:hover {
    background-color: var(--xrui-primary);
}

.xrui-contextual-menu__item:hover > .unity-label {
    color: rgba(255, 255, 255, 255);
}

.xrui-contextual-menu__item:hover > .xrui-icon {
    -unity-background-image-tint-color: rgba(255, 255, 255, 255);
}
